@model FamilyModel

@{
    ViewData["Title"] = "Surname";
}

<div class="container text-center">
    <div class="row align-items-start">
        <div class="col-8">
            @{
                await Html.RenderPartialAsync("FamilyPartial", Model);
            }
        </div>
        <div class="col align-self-center">
            <a class="btn btn-primary" href="~/families/edit/@Model.Id">Edit</a>
        </div>
        <div class="col align-self-center">
            <a class="btn btn-danger" href="~/families/delete/@Model.Id">Delete</a>
        </div>
    </div>
</div>


