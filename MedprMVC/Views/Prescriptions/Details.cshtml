@model PrescriptionModel

@{
    ViewData["Title"] = "Presctiprion details";
}

<div class="container text-center">
    <div class="row align-items-start">
        <div class="col-8">
            @{
                await Html.RenderPartialAsync("PrescriptionPartial", Model);
            }
        </div>
        <div class="col align-self-center">
            <a class="btn btn-primary" href="~/prescriptions/edit/@Model.Id">Edit</a>
        </div>
        <div class="col align-self-center">
            <a class="btn btn-danger" href="~/prescriptions/delete/@Model.Id">Delete</a>
        </div>
    </div>
</div>

