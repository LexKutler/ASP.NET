@model PrescriptionModel

@{
    ViewData["Title"] = "Delete prescription";
}

<div class="container text-center">
    <div class="row align-items-start">
        <div class="col-8">
            @{
                await Html.RenderPartialAsync("PrescriptionPartial", Model);
            }
        </div>
        <div class="col align-self-center">
            <form asp-controller="Prescriptions" asp-action="Delete" method="post">
                <input type="submit" name="@Model.Id" class="btn btn-primary" value="Yes">
            </form>
        </div>
        <div class="col align-self-center">
            <a class="btn btn-primary" href="~/prescriptions/details/@Model.Id">No</a>
        </div>
    </div>
</div>