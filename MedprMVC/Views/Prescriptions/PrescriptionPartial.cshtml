@model PrescriptionModel

<div class="container text-center">
    <div class="row align-items-center">
        <div class="col">
            <b>User:</b>
            <div>@Model.User.FullName</div>
            <div>@Model.User.Login</div>
        </div>
        <div class="col">
            <b>Doctor:</b>
            <div>@Model.Doctor.Name</div>
            <div>who has <i>@Model.Doctor.Experience</i> years of experience</div>
        </div>
        <div class="col">
            <b>Drug:</b>
            <div>@Model.Drug.Name</div>
            <div>@Model.Drug.PharmGroup</div>
            <div>$@Model.Drug.Price per pill</div>
            <div>@Model.Dose pills per day</div>
        </div>
        <div class="col">
            <b>Begin:</b>
            <div>@Model.StartDate.ToString("dddd d MMMM yyyy")</div>
            <b>End:</b>
            <div>@Model.EndDate.ToString("dddd d MMMM yyyy")</div>
        </div>
    </div>
</div>


