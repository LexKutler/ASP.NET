@model AppointmentModel

<div class="container text-center">
    <div class="row align-items-center">
        <div class="col fs-4">
            @Html.DisplayFor(modelItem => Model.Date)
        </div>
        <div class="col fs-4">
            <div>Doctor:</div>
        </div>
        <div class="col fs-4">
            <div>User:</div>
        </div>
    </div>
    <div class="row align-items-start">
        <div class="col">
            @Html.DisplayFor(modelItem => Model.Place)
        </div>
        <div class="col">
            <div>
                @Model.Doctor.Name
            </div>
            <div>
                practiced @Model.Doctor.Experience years
            </div>
        </div>
        <div class="col">
            <div>
                @Model.User.FullName
            </div>
            <em>@Model.User.Login</em>
        </div>
    </div>
</div>


