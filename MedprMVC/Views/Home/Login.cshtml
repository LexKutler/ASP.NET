@model UserModel

@{
    ViewData["Title"] = "Log in";
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <form id="account" asp-controller="Home" asp-action="Login" method="post">
            <h2>Enter account credentials to log in.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Login" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Login" class="form-label"></label>
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>
            <br />
            <div class="form-floating">
                <input asp-for="Password" class="form-control" autocomplete="current-password" aria-required="true" />
                <label asp-for="Password" class="form-label"></label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <br />
            <button id="login" type="submit" class="w-100 btn btn-lg btn-primary">Login</button>
        </form>
    </div>
</div>
