@model DrugModel

@{
    ViewData["Title"] = "Delete drug";
}

<table class="table table-borderless">
    <tbody>
        <tr>
            <td>
                @{
                    await Html.RenderPartialAsync("DrugDetailsPreview", Model);
                }
            </td>
            <td>
                <form asp-controller="Drugs" asp-action="Delete" method="post">
                    <input type="submit" name="@Model.Id" class="btn btn-primary" value="Yes">
                </form>
            </td>
            <td>
                <a class="btn btn-primary" href="~/drugs/details/@Model.Id">No</a>
            </td>
        </tr>
    </tbody>
</table>