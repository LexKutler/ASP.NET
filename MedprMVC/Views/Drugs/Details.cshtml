@model DrugModel

@{
    ViewData["Title"] = "Drug detail";
}

<table class="table table-borderless">
    <tbody>
        <tr>
            <td>
                @{await Html.RenderPartialAsync("DrugDetailsPreview", Model);}
            </td>
            <td>
                <a class="btn btn-primary" href="~/drugs/edit/@Model.Id">Edit</a>
                <a class="btn btn-danger" href="~/drugs/delete/@Model.Id">Delete</a>
            </td>
        </tr>
    </tbody>
</table>

