@model List<DrugModel>

@{
    ViewData["Title"] = "All drugs";
}

@if (Model.Any()){
    foreach(var drug in Model){
        await Html.RenderPartialAsync("DrugDetailsPreview", drug);

        <a class="btn btn-primary" href="~/drugs/details/@drug.Id">Read details</a>
    }
}
<br>
<br>
<div>
    <a class="btn btn-primary" asp-action="Create" asp-controller="Drugs">Add drug</a>
</div>
